<?xml version="1.0" encoding="utf-8"?>
<content-item-layout>
    
    <div class="person">
    
        <include file="fragments/edit-link.xml"/>
   
        <include file="fragments/assets/image-attachments.xml"/>

        <include file="fragments/assets/notes.xml"/>

        <person-contact-entries>
            <dl>
                <contact-entry key="email">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="phone_office">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="phone_mobile">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="phone_private">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="fax">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="im">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="office">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="visiting_hours">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
                <contact-entry key="homepage">
                    <dt>
                        <contact-entry-label/>
                    </dt>
                    <dd>
                        <contact-entry-value/>
                    </dd>
                </contact-entry>
            </dl>
        </person-contact-entries>
        
        <person-address>
            <div class="address">
                <pre class="addresstext">
                    <address-text/>
                </pre>
            
                <p class="location">
                    <span class="postal-code">
                        <postal-code/>
                    </span>
                    <space/>
                    <span class="city">
                        <city/>
                    </span>
                </p>
            
                <p class="country">
                    <country/>
                </p>
            </div>
        </person-address>
        
        <include file="fragments/assets/related-links-and-file-attachments.xml" />
        
    </div>
</content-item-layout>