<?xml version="1.0" encoding="utf-8"?>
<content-item-layout>
    <div class="scipublication series">
        <include file="fragments/edit-link.xml"/>
    
        <div class="abstract">
            <show-property name="abstract"/>
        </div>
    
        <scipublications>
            <div>
                
            
                <series-volumes>
                    <h2 class="subheading">
                        <show-text module="scipublications">
                            series-volumes
                        </show-text>
                    </h2>
                    <filters form-class="list-filter">
                        <filter>
                            <div class="form-group">
                                <filter-label class="control-label"/>
                                <filter-control class="form-control"/>
                            </div>
                        </filter>
                    </filters>
                    <ul class="articles">
                        <volume>
                            <li>
                                <content-item mode="list"/>
                            </li>
                        </volume>
                    </ul>
                </series-volumes>
            </div>
        </scipublications>
    </div>
</content-item-layout>