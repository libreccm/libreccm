<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE stylesheet [<!ENTITY nbsp '&#160;'>
                      <!ENTITY thinsp '&#8201;'>]>
<content-item-layout>

    <div>
        <include file="fragments/edit-link.xml"/>
        
        <div class="fsi-desc">
            <fsi-description/>
        </div>
    
        <include file="fragments/assets/image-attachments.xml"/>

        <include file="fragments/assets/notes.xml"/>
        
        <div class="fsi-links">
            <fsi-link use-filename="yes" mode="stream">
                <a class="stream">
                    <show-text module="fsi">links/view</show-text>
                </a>
            </fsi-link>
    
            <fsi-link use-filename="yes" mode="download">
                <a class="download">
                    <show-text module="fsi">links/download</show-text>
                </a>
            </fsi-link>
        </div>
        
        <include file="fragments/assets/related-links-and-file-attachments.xml" />
    
    </div>
    
</content-item-layout>