<?xml version="1.0" encoding="utf-8"?>
<content-item-layout>

    <div class="pressrelease">
        <include file="fragments/edit-link.xml"/>
    
        <div class="lead">
            <show-property name="summary"/>
        </div>
        
        <include file="fragments/assets/image-attachments.xml"/>

        <include file="fragments/assets/notes.xml"/>
    
        <div class="main">
            <main-text/>
        </div>
    
        <h2 class="subheading">
            <show-text module="pressrelease">contact-info</show-text>
        </h2>
        <div class="contactinfo">
            <show-property disable-output-escaping="yes" name="contactInfo"/>
        </div>
    
        <div class="referencecode">
            <span>
                <show-text module="pressrelease">reference-code</show-text>: 
            </span>
            <show-property name="referenceCode"/>
        </div>
        
        <include file="fragments/assets/related-links-and-file-attachments.xml" />
    
    </div>
    
</content-item-layout>