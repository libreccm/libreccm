<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE stylesheet [<!ENTITY nbsp '&#160;'>
                      <!ENTITY thinsp '&#8201;'>]>

<content-item-layout>
    <a>
        <content-item-title/>
    </a>
    <div class="news-date">
        <news-date>
            <date-format default="true">
                <iso-date/>
            </date-format>
            <date-format lang="de">
                <day zero="true"/>.&thinsp;
                <month-name/>&thinsp;
                <year/>
            </date-format>
            <date-format lang="en">
                <month/>/<day/>/<year/>
            </date-format>
        </news-date>
    </div>
    <div class="lead">
        <lead-text/>
    </div>
</content-item-layout>