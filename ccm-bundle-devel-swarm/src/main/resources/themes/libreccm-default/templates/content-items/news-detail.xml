<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE stylesheet [<!ENTITY nbsp '&#160;'>
                      <!ENTITY thinsp '&#8201;'>]>
<content-item-layout>

    <div>
        <div class="news-date">
            <news-date>
                <date-format default="true">
                    <iso-date/>
                </date-format>
                <date-format lang="de">
                    <day zero="true"/>.&thinsp;
                    <month-name/>&thinsp;
                    <year/>
                </date-format>
                <date-format lang="en">
                    <month/>/<day/>/<year/>
                </date-format>
            </news-date>
        </div>
        
        <include file="fragments/edit-link.xml"/>
        
        <div class="lead">
            <lead-text/>
        </div>
    
        <include file="fragments/assets/image-attachments.xml"/>

        <include file="fragments/assets/notes.xml"/>

        <div class="main">
            <main-text/>
        </div>
        
        <include file="fragments/assets/related-links-and-file-attachments.xml" />
    
    </div>
    
</content-item-layout>