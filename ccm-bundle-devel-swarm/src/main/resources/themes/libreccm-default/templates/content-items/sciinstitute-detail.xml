<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE stylesheet [<!ENTITY nbsp '&#160;'>
                      <!ENTITY thinsp '&#8201;'>]>
<content-item-layout>
    
    <div class="sciinstitute sciorga">
        
        <include file="fragments/edit-link.xml"/>
        
        <orgaunit>
            <div class="addendum">
                <addendum/>
            </div>
            
            <div class="shortdesc">
                <sciinstitute-shortdesc/>
            </div>
        </orgaunit>

        <include file="fragments/assets/image-attachments.xml"/>

        <include file="fragments/assets/notes.xml"/>
            
        <orgaunit-available-tabs>
            <ul class="nav nav-tabs">
                <available-tab selected-classes="active">
                    <li role="presentation">
                        <a>
                            <tab-label/>
                        </a>
                    </li>
                </available-tab>
            </ul>
        </orgaunit-available-tabs>

        <orgaunit-current-tab>
            <tab name="summary">
                <div class="tab">
                    <div class="addendum">
                        <addendum/>
                    </div>
            
                    <div class="shortdesc">
                        <sciproject-shortdesc/>
                    </div>
                    
                    <div class="members">
                        <members>
                            <ul>
                                <member>
                                    <li>
                                        <givenname/>
                                        <space/>
                                        <surname/>
                                        <if-member-role-is role="head">
                                            (<member-role/>)
                                        </if-member-role-is>
                                    </li>
                                </member>
                            </ul>
                        </members>
                    </div>
                    
                    <orgaunit-contact>
                        <h2>
                            <show-text module="sciinstitute">contact</show-text>
                        </h2>
                
                        <orgaunit-contact-entries>
                            <contact-entry key="email">
                                <contact-entry-value-as-link>
                                    <a>
                                        <orgaunit-contact-person>
                                            <givenname/>
                                            <space/>
                                            <surname/>
                                        </orgaunit-contact-person>
                                    </a>
                                </contact-entry-value-as-link>
                            </contact-entry>
                        </orgaunit-contact-entries>
                
                        <orgaunit-contact-entries>
                            <dl>
                                <contact-entry key="email">
                                    <dt>
                                        <contact-entry-label/>
                                    </dt>
                                    <dd>
                                        <contact-entry-value/>
                                    </dd>
                                </contact-entry>
                            </dl>
                        </orgaunit-contact-entries>
                    </orgaunit-contact>
                
                    <sciinstitute-departments>
                        <h2>
                            <show-text module="sciinstitute">departments</show-text>
                        </h2>
                        <ul>
                            <department>
                                <li>
                                    <department-link>
                                        <a>
                                            <department-name/>
                                        </a>
                                    </department-link>
                                </li>
                            </department>
                        </ul>
                    </sciinstitute-departments>
                </div>
            </tab>
                
            <tab name="desc">
                <div class="tab">
                    <sciinstitute-desc/>
                </div>
            </tab>
            
            <tab name="members">
                <div class="tab members">
                    <sciinstitute-members>
                        <ul>
                            <member>
                                <li>
                                    <givenname/>
                                    <space/>
                                    <surname/>
                                    <if-member-role-is role="head">
                                        (<member-role/>)
                                    </if-member-role-is>
                                    
                                    <member-contact-entries>
                                        <dl>
                                            <contact-entry key="email">
                                                <dt>
                                                    <contact-entry-label/>
                                                </dt>
                                                <dd>
                                                    <contact-entry-value/>
                                                </dd>
                                            </contact-entry>
                                        </dl>
                                    </member-contact-entries>
                                </li>
                            </member>
                        </ul>
                    </sciinstitute-members>
                </div>
            </tab>
        </orgaunit-current-tab>

        <include file="fragments/assets/related-links-and-file-attachments.xml" />
        
    </div>
</content-item-layout>
