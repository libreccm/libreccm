<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE stylesheet [<!ENTITY nbsp '&#160;'>
                      <!ENTITY thinsp '&#8201;'>]>
<content-item-layout>

    <div>
        <include file="fragments/edit-link.xml"/>
    
        <div class="lead">
            <lead-text/>
        </div>
    
        <include file="fragments/assets/image-attachments.xml"/>
    
        <dl class="event-details">
            <dt class="start-date">
                <show-text module="event">start-date</show-text>
            </dt>
            <dd>
                <start-date>
                    <date-format default="true">
                        <iso-date/>
                    </date-format>
                    <date-format lang="de">
                        <day zero="true"/>.&thinsp;
                        <month-name/>&thinsp;
                        <year/>
                    </date-format>
                    <date-format lang="en">
                        <month/>/<day/>/<year/>
                    </date-format>
                </start-date>
                &nbsp;
                <start-time>
                    <style lang="en" style="12h"/>
                    <style default="true" style="24h"/>
                </start-time>
            </dd>
        
            <dt class="end-date">
                <show-text module="event">end-date</show-text>
            </dt>
            <dd class="end-date">
                <end-date>
                    <date-format default="true">
                        <iso-date/>
                    </date-format>
                    <date-format lang="de">
                        <day zero="true"/>.&thinsp;
                        <month-name/>&thinsp;
                        <year/>
                    </date-format>
                    <date-format lang="en">
                        <month/>/<day/>/<year/>
                    </date-format>
                </end-date>
                &nbsp;
                <end-time>
                    <style lang="en" style="12h"/>
                    <style default="true" style="24h"/>
                </end-time>
            </dd>
        
            <event-date-addendum>
                <dt class="event-date-addendum">
                    <show-text module="event">date-addendum</show-text>
                </dt>
                <dd class="event-date-addendum">
                    <event-date-addendum-text/>
                </dd>
            </event-date-addendum>
        
            <location>
                <dt class="location">
                    <show-text module="event">location</show-text>
                </dt>
                <dd class="location">
                    <location-text/>
                </dd>
            </location>
        
            <event-type>
                <dt class="event-type">
                    <show-text module="event">event-type</show-text>
                </dt>
                <dd class="event-type">
                    <event-type-text/>
                </dd>
            </event-type>
        
            <main-contributor>
                <dt class="main-contributor">
                    <show-text module="event">main-contributor</show-text>
                </dt>
                <dd class="main-contributor">
                    <main-contributor-text/>
                </dd>
            </main-contributor>
        
        </dl>
    
        

        <include file="fragments/assets/notes.xml"/>
    
        <div class="main">
            <main-text/>
        </div>
        
        <include file="fragments/assets/related-links-and-file-attachments.xml" />
        
    </div>
    
</content-item-layout>